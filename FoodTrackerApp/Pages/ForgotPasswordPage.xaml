<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="FoodTrackerApp.Pages.ForgotPasswordPage">
    <ContentPage.Content>
            <StackLayout Orientation="Vertical" Padding="40" Spacing="20">  
                <BoxView HeightRequest="10"/>
                <Label Text="Forgot Password" HorizontalOptions="Center" FontSize="25"/>
                <Label Text="Enter Email to retrieve Password" HorizontalOptions="Center" FontSize="15"/>
                <Frame BackgroundColor="#FE0000" HasShadow="False">  
                    <StackLayout Orientation="Vertical" Spacing="10">  
                        <Entry x:Name="Email" Text="{Binding Email}" Placeholder="Email"   
                               PlaceholderColor="White" HeightRequest="45"   
                               Keyboard="Email"  
                               TextColor="White"/>  
                    </StackLayout>  
                </Frame>  
                <Button Command="{Binding SubmitCommand}" Text="Submit" TextColor="White"  
                        FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                        BackgroundColor="Black" />

            </StackLayout>
    </ContentPage.Content>  
</ContentPage> 